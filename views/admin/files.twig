{% extends "../_layout-admin.twig" %}

{% block title %}Files{% endblock %}

{% block layoutClass %}admin{% endblock %}

{% block content %}
  <section class="content" role="main">

    <h1 class="page-title">
      <span class="page-title__container">Files</span>
    </h1>

    {% if parentPath %}
      <a href="{{ parentPath }}">..</a>
    {% endif %}

    <ul class="file-listing file-listing--grid">
      {% for folder in folders %}
        <li class="file-listing__file">
          <a href="{{ folderPath }}{{ folder.filename }}">{{ folder.filename }}</a>
        </li>
      {% endfor %}

      {% for file in files %}
        <li class="file-listing__file">
          {% if file.isImage %}
            <img src="{{ filePath }}{{ file.filename }}" alt="" />
          {% endif %}
          {{ file.filename }}
        </li>
      {% endfor %}
    </ul>

  </section>
{% endblock %}
